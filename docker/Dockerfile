FROM debian:stretch-slim AS hadolint-builder

RUN apt-get update \
 && apt-get install --no-install-recommends -y \
    build-essential=12.3 \
    libffi-dev=3.2.* \
    libgmp-dev=2:6.1.* \
    zlib1g-dev=1:1.2.* \
    curl=7.52.* \
    ca-certificates=20161130+nmu1 \
    git=1:2.11.* \
    netbase=5.4 \
 && rm -rf /var/lib/apt/lists/*

RUN curl -sSL https://get.haskellstack.org/ | sh

WORKDIR /opt/hadolint/
COPY stack.yaml package.yaml /opt/hadolint/
RUN stack --no-terminal --install-ghc test --only-dependencies \
  # Delete files that can be restored or are not needed
  && rm -rf \
    # GHC (1)
    /root/.stack/programs/x86_64-linux/ghc-*.installed \
    /root/.stack/programs/x86_64-linux/ghc-*/* \
    # legacy index
    /root/.stack/indices/Hackage/00-index.tar

# hadolint ignore=DL3306
FROM hadolint-builder AS binary-builder
COPY . /opt/hadolint
RUN gzip /root/.stack/indices/Hackage/0*-index.tar.gz \
  && scripts/fetch_version.sh \
  && stack install --ghc-options="-fPIC"

# COMPRESS WITH UPX
RUN curl -sSL https://github.com/upx/upx/releases/download/v3.94/upx-3.94-amd64_linux.tar.xz \
  | tar -x --xz --strip-components 1 upx-3.94-amd64_linux/upx \
  && ./upx --best --ultra-brute /root/.local/bin/hadolint

FROM debian:stretch-slim AS distro
ENV LC_ALL=C.UTF-8
COPY --from=binary-builder /root/.local/bin/hadolint /bin/
CMD ["/bin/hadolint", "-"]
